<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DaangnMarket" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brandColor</item>
        <item name="colorPrimaryVariant">@color/whiteGray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/whiteGray</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brandColor</item>
        <item name="colorSecondaryVariant">@color/whiteGray</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray</item>

        <!-- Snackbar Text style. -->
        <item name="snackbarStyle">@style/AppTheme.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/AppTheme.Snackbar.TextView</item>

        <item name="progressBarStyle">@style/AppTheme.ProgressBar</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="AppTheme.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:alpha">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:progressTint">@color/brandColor</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/layerlist_splash</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>